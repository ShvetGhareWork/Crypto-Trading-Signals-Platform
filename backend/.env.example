# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crypto-signals
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/crypto-signals?retryWrites=true&w=majority

# Redis Configuration (OPTIONAL - app works without it)
# Set to 'none' to disable caching
REDIS_URL=none
# For local Redis: redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port

# JWT Configuration
# IMPORTANT: Generate strong secrets in production using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=55c0e85d245e44465031a884997de529
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-change-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_AUTH_DEV=100
RATE_LIMIT_AUTH_PROD=5
RATE_LIMIT_API_DEV=1000
RATE_LIMIT_API_PROD=100

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# Security
BCRYPT_SALT_ROUNDS=12

# Cache Configuration
CACHE_TTL_SIGNALS=300
# TTL in seconds (300s = 5 minutes)
CACHE_TTL_SIGNAL_DETAIL=600
# TTL in seconds (600s = 10 minutes)
